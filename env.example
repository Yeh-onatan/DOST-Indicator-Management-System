# Application Configuration
APP_NAME="DOST Information Management System"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance Mode
APP_MAINTENANCE_DRIVER=file

# Logging Configuration
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=dbDIMS
DB_USERNAME=root
DB_PASSWORD=
DB_COLLATION=utf8mb4_unicode_ci
DB_CHARSET=utf8mb4

# Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false
SESSION_SAME_SITE=lax

# Cache Configuration
CACHE_STORE=database
CACHE_PREFIX=

# Queue Configuration
QUEUE_CONNECTION=database
QUEUE_FAILED_DRIVER=database-uuids

# Redis Configuration (Optional - if using Redis for cache/sessions)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@dims.gov.ph"
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration (for SES, S3, etc.)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=ap-southeast-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Filesystem Configuration
FILESYSTEM_DISK=local

# Broadcasting Configuration
BROADCAST_CONNECTION=log
BROADCAST_DRIVER=log

# Pusher Configuration (if using real-time features)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Vite Configuration (for frontend assets)
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Security Settings
# Password expiry in days (matches your users table default: 90)
PASSWORD_EXPIRY_DAYS=90

# Maximum failed login attempts before lockout
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=15

# Two-Factor Authentication
TWO_FACTOR_ENABLED=true

# API Rate Limiting
API_RATE_LIMIT=60
API_RATE_LIMIT_WINDOW=1

# File Upload Configuration
MAX_FILE_UPLOAD_SIZE=10240
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png

# Archive Configuration (matches admin_settings table)
ARCHIVE_YEARS=5

# Timezone Configuration (matches admin_settings table)
DEFAULT_TIMEZONE=Asia/Manila
DEFAULT_LOCALE=en

# Organization Settings (matches admin_settings table)
ORG_NAME="Department of Science and Technology"
ORG_ACRONYM="DOST"

# PDF Generation Settings
PDF_LOGO_PATH=
PDF_HEADER=
PDF_FOOTER=

# Notification Settings
NOTIFICATION_CHANNELS=email,database
EMAIL_NOTIFICATION_ENABLED=true
SLA_WARNING_HOURS=24
SLA_CRITICAL_HOURS=48

# Data Quality Rules
DATA_QUALITY_CHECK_ENABLED=true
AUTO_VALIDATION_ENABLED=false

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_DISK=local

# Audit Log Configuration
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=365

# Security Incident Tracking
SECURITY_INCIDENT_NOTIFICATION_EMAIL=security@dims.gov.ph
SECURITY_INCIDENT_ALERT_ENABLED=true

# Regional Office Configuration
# Comma-separated list of region codes
ACTIVE_REGIONS=1,2,3,4a,4b,5,6,7,8,9,10,11,12,13,CAR,NCR,BARMM

# Reporting Windows
SUBMISSION_DEADLINE_GRACE_PERIOD_DAYS=7

# Workflow Configuration
AUTO_APPROVE_OBJECTIVES=false
REQUIRE_OUSEC_APPROVAL=true
REQUIRE_SUPERADMIN_APPROVAL=true

# Monitoring & Error Tracking (Optional)
# Sentry
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_PROFILES_SAMPLE_RATE=1.0

# New Relic (Optional)
NEW_RELIC_APP_NAME=
NEW_RELIC_LICENSE_KEY=

# Telescope (Development Only - DO NOT ENABLE IN PRODUCTION)
TELESCOPE_ENABLED=false

# Horizon (if using Redis queues)
HORIZON_ENABLED=false

# Sanctum (API Authentication)
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,127.0.0.1,127.0.0.1:8000

# CORS Configuration
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=*
CORS_ALLOWED_HEADERS=*
CORS_EXPOSED_HEADERS=
CORS_MAX_AGE=0
CORS_SUPPORTS_CREDENTIALS=false

# API Documentation
API_DOCS_ENABLED=true

# Development Tools (NEVER ENABLE IN PRODUCTION)
DEBUGBAR_ENABLED=false
CLOCKWORK_ENABLED=false

# Feature Flags (Optional)
FEATURE_MULTI_REGION=true
FEATURE_ADVANCED_REPORTING=true
FEATURE_BULK_OPERATIONS=true
FEATURE_EXPORT_TO_EXCEL=true
FEATURE_EXPORT_TO_PDF=true

# Search Configuration (if using Elasticsearch/Meilisearch)
SCOUT_DRIVER=database
SCOUT_QUEUE=false
MEILISEARCH_HOST=http://127.0.0.1:7700
MEILISEARCH_KEY=

# Trusted Proxies (for load balancers)
TRUSTED_PROXIES=

# Asset URL (for CDN)
ASSET_URL=

# Mix (Legacy - if not using Vite)
MIX_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
MIX_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
